//
// Font declarations
//---------------------------------------------------------
@font-face
  font-family 'Alright Sans LT'
  src url('../fonts/alrightSansLTReg.eot') // IE9 Compat Modes
  src url('../fonts/alrightSansLTReg.eot?#iefix') format('embedded-opentype'), // IE6-IE8
      url('../fonts/alrightSansLTReg.woff') format('woff'), // Modern Browsers
      url('../fonts/alrightSansLTReg.ttf')  format('truetype'), // Safari, Android, iOS
      url('../fonts/alrightSansLTReg.svg#svgFontName') format('svg') // Legacy iOS
  font-style normal
  font-weight normal

