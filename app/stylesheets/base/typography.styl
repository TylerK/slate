//
// Type faces
//---------------------------------------------------------
$type-fallbacks         = "Helvetica Neue", "Helvetica", "Arial", sans-serif;
$type-regular           = "Alright Sans LT", $type-fallbacks;
$type-regular--italic   = "Alright Sans LT Italic", $type-fallbacks;
$type-medium            = "Alright Sans LT Medium", $type-fallbacks;
$type-medium--italic    = "Alright Sans LT Medium Italic", $type-fallbacks;


//
// Font face assignments and general styles
//---------------------------------------------------------
html, body
  font-family $type-regular
  color $grey-medium

h1, h2, h3, h4, h5, h6
  font-family $type-medium
  color $grey-darker
  margin 0
  padding 0
  font-weight normal

i, em, pre, code
  font-family $type-regular--italic

p, a
  color inherit
