  src url('../fonts/alrightSansLTRegItalic.eot?#iefix') format('embedded-opentype'), // IE6-IE8
      url('../fonts/alrightSansLTRegItalic.woff') format('woff'), // Modern Browsers
      url('../fonts/alrightSansLTRegItalic.ttf')  format('truetype'), // Safari, Android, iOS
