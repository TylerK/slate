//
// Variables
//
$height-topNav = 60px
$width-sideBar = 260px

//
// Reset the lists inside nav's
//
nav
  ul, li
    list-style-type none

//
// Lyve's logo
//
nav .logo
  width $width-sideBar
  height $height-topNav
  float left

nav .logo h1
  width 100%
  height 100%
  background $color-primary
  position relative

nav .logo svg
  width auto
  height 42px
  position absolute
  left 50%
  top 50%
  margin-top -21px
  margin-left -12.5%
  fill white

//
// Tier 2 nav
//
.side-nav
  width $width-sideBar
  min-height 100%
  background $grey-darker
  padding-top $height-topNav

.side-nav a
  display block
  width 100%
  padding-top 15px
  padding-left 15px
  color $grey-light

.side-nav a:hover
  color white

.side-nav h3
  color white
  border-bottom 1px solid $grey-dark
  padding 10px
  padding-top 30px
