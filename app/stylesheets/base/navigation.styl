//
// Variables
//
$height-topNav = 60px
$width-sideBar = 260px

//
// Reset the lists inside nav's
//
nav
  ul, li
    list-style-type none

//
// Top bar
//
.top-bar
  height $height-topNav
  overflow hidden

//
// Lyve's logo
//
.top-bar .logo
  width $width-sideBar
  height 100%
  float left

.top-bar .logo h1
  width 100%
  height 100%
  background $color-primary
  position relative

.top-bar .logo svg
  width auto
  height 42px
  position absolute
  left 50%
  top 50%
  margin-top -21px
  margin-left -12.5%
  fill white

//
// Tier 1 nav
//
.top-nav,
.top-nav li
  float right
  line-height $height-topNav

.top-nav a
  display block
  width 160px
  font-size 18px
  text-align center

.top-nav a:hover,
.top-nav .selected
  background $color-splash
  color white

//
// Tier 2 nav
//
.side-nav
  width $width-sideBar
  min-height 100%
  background $grey-darker
  margin-top -($height-topNav)
  padding-top $height-topNav

.side-nav a
  display block
  width 100%
  padding-top 15px
  padding-left 15px
  color $grey-light

.side-nav a:hover
  color white

.side-nav h3
  color white
  border-bottom 1px solid $grey-dark
  padding 10px
  padding-top 30px
