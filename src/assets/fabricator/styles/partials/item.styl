.f-item-group {
  clearfix();
  margin-top: 3rem;
  margin-bottom: 3rem;
  padding-bottom: 3rem;
  max-width: 60rem;

  &:last-child {
    border-bottom: 0;
    margin-bottom: 0;
  }

  & ~ & {
    margin-top: 0;
  }

  & > & {
    padding-bottom: 1.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 0;

    &:first-of-type {
      margin-top: 0;
    }

    &:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
    }
  }
}

.f-item-code {
  margin-top: 1rem;
  position: relative;

  &:before {
    content ' '
    position: absolute;
    top: -7px;
    left: 7px;
    border-left: 7px solid transparent;
    border-right: 7px solid transparent;
    border-bottom: 7px solid $code-colors['light-gray'];
  }
}

.f-item-preview {
  clearfix();
}

.f-item-border-bottom {
  border-bottom: 1px solid $colors['silver'];
}

.f-item-heading-group {
  clearfix();
  margin-bottom: 1rem;
  vertical-align: middle;
}

.f-container > .f-item-group {
  margin-bottom: 4rem;
}
.f-container > .f-item-group > .f-item-heading-group {
  border-bottom: 2px solid $colors['orange']
  margin-bottom: 2.5rem;
  padding-bottom: 1rem;
}

.f-item-heading {
  margin-top: 0;
  margin-bottom: 0;
  display: inline-block;
  vertical-align: middle;
  line-height: 1;
}


.f-item-controls {
  display: inline-block;
  vertical-align: middle;
  margin-left: 0.5rem;

  .f-control {
    width: 14px;
    height: 14px;
    display: block;
    float: left;

    &:hover {
      fill: $colors['normal'];
    }

    fill: $colors['silver'];
  }
}

.f-item-hidden {
  display: none;
}

.f-item-notes {
  font-size: 0.875rem;
  border-left: 2px solid $colors['blueBright'];
  padding-left: 1rem;
  margin-bottom: 1rem;

  p {
    line-height: 1.6rem;
  }

  ul {
    padding-left: 1.618rem;
  }
  li {
    list-style-type: disc;
  }
}
