html {
  height: 100%;

  &.f-menu-active {
    overflow: hidden;

    @media (min-width: 60em) {
      overflow: auto;
    }
  }
}

body {
  margin: 0;
  position: relative;

  .f-menu-active & {
    width: 100%;
    height: 100%;
    overflow: hidden;

    @media (min-width: 60em) {
      overflow: auto;
    }
  }
}

.f-container {
  clearfix();
  border-box();
  position: relative;
  padding: 0 2rem;
  z-index: 0;
  min-height: 100vh;
  margin-left: 14rem;

  > h1 {
    color: $colors['white'];
    background: $colors['blue'];
    margin: 0 -2rem;
    padding: 5rem 2rem;
  }
}
