.notifications {
  display flex
  width 100%
  background #fff
  padding .5rem
  z-index 10
  margin-bottom 1rem
  text-align center

  border-style solid
  border-width 1px
  border-color $silver

  // Colors
  &.success, &.success i {
    border-color $color-success
    color darken($color-success, 10%)
  }
  &.error, &.error i  {
    border-color $color-error
    color darken($color-error, 5%)
  }
  &.info, &.info i  {
    border-color $color-info
    color darken($color-info, 10%)
  }

  // Layout
  &--pagination,
  &--messages,
  &--actions {
    display flex
    justify-content center
    align-items center
  }
  &--pagination {
    justify-content space-between
  }
  &--messages {
    width 100%
  }
  &--actions {
    justify-content flex-end
  }

  // Actions
  .action {
    padding .5rem
    color #fff
  }
}

