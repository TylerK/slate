.tooltip {
  border-radius: 3px;
  display: inline-block;
  font-size: 13px;
  opacity: 0;
  padding: 8px 21px;
  pointer-events: none;
  position: relative;
  transition: opacity 0.3s ease-out,margin-top 0.3s ease-out,margin-left 0.3s ease-out;
}

.tooltip:after {
  content: "";
  width: 0;
  height: 0;
  position: absolute;
}

.tooltip.show {
  opacity: 1 !important;
  margin-top: 0px !important;
  margin-left: 0px !important;
}

.tooltip.type-dark {
  color: $off-white;
  background-color: $grey-darker;
}

.tooltip.type-dark.place-top:after {
  border-top: 8px solid $grey-darker;
}

.tooltip.type-dark.place-bottom:after {
  border-bottom: 8px solid $grey-darker;
}

.tooltip.type-dark.place-left:after {
  border-left: 6px solid $grey-darker;
}

.tooltip.type-dark.place-right:after {
  border-right: 6px solid $grey-darker;
}

.tooltip.type-success {
  color: #fff;
  background-color: $color-success;
}

.tooltip.type-success.place-top:after {
  border-top: 8px solid $color-success;
}

.tooltip.type-success.place-bottom:after {
  border-bottom: 8px solid $color-success;
}

.tooltip.type-success.place-left:after {
  border-left: 6px solid $color-success;
}

.tooltip.type-success.place-right:after {
  border-right: 6px solid $color-success;
}

